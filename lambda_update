echo "START build"
GOOS=linux GOARCH=arm64 go build -tags lambda.norpc -o bootstrap ./main.go;
echo "END build"
echo "START zip"
zip tmp/yogabot.zip bootstrap;
echo "END zip"
echo "START lambda update"
aws lambda update-function-code --function-name yogabot \
--profile private \
--zip-file fileb:///Users/avasilev/projects/my/bot/tmp/yogabot.zip;

rm bootstrap

echo "END lambda update"
